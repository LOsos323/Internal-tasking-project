@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="col-xs-12 col-md-offset-3 col-md-6 login centering">
        <h4 class="form_name">Вход</h4>
        <h5 class="error"></h5>
        <form method="post">
            <div>
                <label class="control-label col-xs-2 col-sm-2 col-md-2" for="email">Email:</label>
                <p class="control-label col-sm-10 col-xs-10 col-md-10">
                    <input class="form-control" id="email" required name="email">
                </p>
            </div>
            <div>
                <label class="control-label col-xs-2 col-sm-2 col-md-2" for="pass">Пароль:</label>
                <p class="control-label col-xs-10 col-sm-10 col-md-10">
                    <input type="password" class="form-control" required name="pass" id="pass">
                </p>
            </div>
            <div class="btn_input">
                <input type="submit" class="btn btn-success" value="Войти">
            </div>
            <p><a href="/Home/Enter"><small>В первый раз на сайте?</small></a></p>

        </form>
    </div>
</div>
</div>
